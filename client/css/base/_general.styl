body
  margin 0
  font-family 'Roboto', sans-serif
  font-size 16px
img
  width 100%
figure
  margin 0
.mobile
  display block
.desktop
  display none
.align
  margin 0 auto
  max-width 75em
  padding 1em
.section
  color white
  &__title
    font-size 2.5rem
    font-weight 100
    text-align center
    text-transform uppercase
  &__content
    font-weight 200
    line-height 1.5em
    text-align left
  &__link
    border-bottom 2px solid white
    color white
    font-size 1.2em
    text-decoration none
    text-transform uppercase
