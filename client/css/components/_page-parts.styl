.page__header
  background-color #414042
  box-shadow 0px 0px 15px 3px _black-dark
  bottom 0
  position fixed
  width 100%
  z-index 100
  .nav-site
    display flex
    justify-content space-between
  .nav-menu
    align-items center
    display flex
    list-style none
    margin 0
    padding 0
    &__link
      border-bottom 2px solid white
      color white
      font-weight 500
      margin-right 1em
      text-transform uppercase
    &__logo
      border 0
      display block
      height 2.6em
      img
        height 100%
